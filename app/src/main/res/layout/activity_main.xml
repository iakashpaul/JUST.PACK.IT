<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            style="@style/label_style"
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Tip: Measure all 3 sides and then purchase the best box" />
        <TextView

            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="built by AkashPaul.com | Team: Blitzkrieg"
            android:autoLink="web"/>
        <TableLayout
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="*">

            <TableRow>

                <Button
                    android:id="@+id/btn_measure"
                    style="@style/button_style"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/button"
                    android:text="@string/btn_measure"
                    android:elevation="7dp"
                    android:translationZ="10dp"
                    android:stateListAnimator="@null"
                    android:shadowRadius="10"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:ellipsize="none"
                    android:maxLines="100"
                    android:scrollHorizontally="false"/>


            </TableRow>

            <TableRow android:layout_height="179dp">

                <TextView
                    android:id="@+id/btn_text"
                    style="@style/button_style"
                    android:layout_height="250dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="40dp"
                    android:autoLink="web"
                    android:background="@drawable/button"
                    android:elevation="10dp"
                    android:shadowRadius="10"
                    android:text="\n Measure your parcel \n to find the best box \n "
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:ellipsize="none"
                    android:maxLines="100"
                    android:scrollHorizontally="false"/>
            </TableRow>
            <TableRow />
        </TableLayout>

    </LinearLayout>
